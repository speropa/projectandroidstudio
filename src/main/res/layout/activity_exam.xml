<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0066CC"
        android:paddingStart="16dp"
        android:paddingEnd="4dp"
        android:elevation="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMPN 2 PAJANGAN"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00 | 100%"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:tint="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/headerLayout"
        android:progressDrawable="@drawable/progress_bar_custom"
        android:indeterminate="false"
        android:visibility="gone"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_wifi"
            android:tint="#999999"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Koneksi Terputus"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COBA LAGI"
            android:backgroundTint="#0066CC"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"/>
        <Button
            android:id="@+id/btnWifiSettingsError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENGATURAN WIFI"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="#0066CC"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutWelcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="#F5F5F5"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_sekolah"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELAMAT DATANG"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Ujian Online\nSMP Negeri 2 Pajangan"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengecekan Sistem Keamanan"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvCheckNet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚪ Koneksi Internet Stabil"
                    android:textSize="14sp"
                    android:paddingVertical="6dp"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                <TextView
                    android:id="@+id/tvCheckDND"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚪ Mode 'Jangan Ganggu'"
                    android:textSize="14sp"
                    android:paddingVertical="6dp"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                <TextView
                    android:id="@+id/tvCheckLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚪ Izin Lokasi (Scan WiFi)"
                    android:textSize="14sp"
                    android:paddingVertical="6dp"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEEEEE"/>

                <TextView
                    android:id="@+id/tvCheckBT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚪ Bluetooth Mati"
                    android:textSize="14sp"
                    android:paddingVertical="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnOpenSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LENGKAPI PENGATURAN"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnLockApp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="KUNCI APLIKASI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#009900"
            android:textColor="#FFFFFF"
            android:enabled="false"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutStandby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="#E3F2FD"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_lock"
            android:tint="#009900"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Terkunci"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#009900"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan KODE SEKOLAH dari pengawas\nuntuk memulai ujian."
            android:gravity="center"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:endIconMode="password_toggle"
            app:boxBackgroundColor="#FFFFFF"
            app:boxCornerRadiusTopStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etExamCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="KODE SEKOLAH"
                android:inputType="numberPassword"
                android:gravity="center_horizontal"
                android:maxLength="6"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEnterExam"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="MASUK KE UJIAN"
            android:backgroundTint="#0066CC"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnExitApp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="KELUAR APLIKASI"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lockLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D32F2F"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="20dp"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_lock"
            android:tint="#FFFFFF"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APLIKASI TERKUNCI"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anda melakukan pelanggaran berat."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splashScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="100dp"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_sekolah"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UJIAN ONLINE"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#0066CC"
            android:letterSpacing="0.05"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMP NEGERI 2 PAJANGAN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="48dp"
            android:indeterminateTint="#0066CC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memuat Sistem Keamanan..."
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</RelativeLayout>